import java.sql.*;

public class Main {


    public static void main(String[] args) {
        var url = "jdbc:mysql://localhost:3306/Teste";
        var user = "root";
        var password = "univille";
        // try-with-resources
        var query = """
                CREATE TABLE teste2(
                dinheiro decimal,
                data DATE,
                hora TIME,
                datahora DATETIME
                );
                INSERT INTO teste2 (dinheiro,data,hora,datahora) VALUES (5, '2026-02-26', 12, '2026-06-26 14:30:00');
                """;
        try(var con = DriverManager.getConnection(url,user,password);
            var st = con.createStatement();) {
            var pre = con.prepareStatement(query);{
                pre.execute();




            }
